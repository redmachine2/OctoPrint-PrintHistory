<div class="pull-right">
    <small>
        {{ _('Sort by') }}:
        <a href="#" data-bind="click: fileNameSort">{{ _('Name') }} <span data-bind="text: sortOrder('fileName')"></span></a> |
        <a href="#" data-bind="click: timeStampSort">{{ _('Date') }} <span data-bind="text: sortOrder('timestamp')"></span></a> |
        <a href="#" data-bind="click: printTimeSort">{{ _('Print time') }} <span data-bind="text: sortOrder('printTime')"></span></a>
    </small>
</div>
<div class="pull-right" style="clear: both;">
    <small>
        Show: <a href="#" data-bind="click: listHelper.toggleFilter.bind($data, 'successful')"><i class="icon-ok" data-bind="style: {visibility: _.contains(listHelper.currentFilters(), 'successful') ? 'visible' : 'hidden'}"></i> only successful prints</a></li>
    </small>
</div>

<table class="table table-striped table-hover table-condensed table-hover" style="clear: both;">
    <tr>
        <th style="width: 30%">Filename</th>
        <th style="width: 4%; text-align: center;"></th>
        <th style="width: 20%">Date</th>
        <th style="width: 15%;text-align: center;">Print time</th>
        <th style="width: 15%;text-align: center;">Filament usage</th>
		<th style="width: 13%;text-align: center;">Cost</th>
        <th style="width: 3%"></th>
    </tr>
    <tbody data-bind="foreach: listHelper.paginatedItems">
        <tr>
            <td>
                <span data-bind="text: fileName, attr: { title: fileName }"></span>
                <a href="#" class="icon-pencil" data-bind="editable: note, editableOptions: {display: false, pk: key, url: 'plugin/printhistory/savenote', success: $root.requestData, error: function(){alert('grr')}}, visible: $root.loginState.isUser() && !$root.isPrinting()" title="Add/edit note"></a>
                <div class="printhistory-note"><small data-bind="text: note"></small></div>
            </td>
            <td style="text-align: center;"><span data-bind="css: {'icon-ok-sign' : success == true, 'icon-exclamation-sign' : success == false}, style: { color: success == true ? 'green' : 'red' }"></span></td>
            <td data-bind="text: formatDate(timestamp), attr: { title: formatTimeAgo(timestamp) }"></td>
            <td style="text-align: center;" data-bind="text: formatDuration(printTime)"></td>
            <td style="text-align: center;" data-bind="html: filamentUsage"></td>
			<td style="text-align: center;" data-bind="html: filamentCost"></td>
            <td>
                <a href="#" class="icon-trash" data-bind="click: function() { if ($root.loginState.isUser() && !$root.isPrinting()) { $root.removeFile($data.key); } else { return; } }, visible: $root.loginState.isUser() && !$root.isPrinting()"></a>
            </td>
        </tr>
    </tbody>
</table>

<div class="pagination pagination-mini pagination-centered">
    <ul>
        <li data-bind="css: {disabled: listHelper.currentPage() === 0}">
            <a href="#" data-bind="click: listHelper.prevPage">«</a>
        </li>
    </ul>
    <ul data-bind="foreach: listHelper.pages">
        <li data-bind="css: { active: $data.number === $root.listHelper.currentPage(), disabled: $data.number === -1 }">
            <a href="#" data-bind="text: $data.text, click: $root.listHelper.changePage.bind($data, $data.number)"></a>
        </li>
    </ul>
    <ul>
        <li data-bind="css: {disabled: listHelper.currentPage() === listHelper.lastPage()}">
            <a href="#" data-bind="click: listHelper.nextPage">»</a>
        </li>
    </ul>
</div>

<table class="table table-striped table-hover table-condensed table-hover">
    <tr>
        <th style="width: 54%">Total:</td>
        <th style="width: 13%; text-align: center;" data-bind="text: totalTime"></td>
        <th style="width: 16%; text-align: center;" data-bind="text: totalUsage"></td>
		<th style="width: 13%; text-align: center;" data-bind="text: totalCost"></td>
        <th style="width: 4%;"></td>
    </tr>
</table>

<div>
    <h1 style="margin-bottom: 0;">Prints per day</h1>
    <small id="printhistory-graphRange">
        <a href="#" data-bind="click: changeGraphRange.bind($data, 'week')">last week</a> |
        <a href="#" data-bind="click: changeGraphRange.bind($data, 'month')">last month</a> |
        <a href="#" data-bind="click: changeGraphRange.bind($data, 'quarter')">last quarter</a>
    </small>
    <div id="printhistory-lastmonth-graph"></div>
</div>

<div style="float: left; width: 45%; margin-right: 20px;">
    <h1>Success rate</h1>
    <div id="printhistory-success-graph"></div>
</div>

<div style="float: left; width: 50%">
    <h1>Export as</h1>
    <a href="#" data-bind="attr: {href: $root.export('csv'), css: {disabled: !$root.export('csv')}}">CSV</a> |
    <a href="#" data-bind="attr: {href: $root.export('excel'), css: {disabled: !$root.export('excel')}}">Excel</a>
<!--
    <a href="#" data-bind="attr: {href: $root.export('pdf'), css: {disabled: !$root.export('pdf')}}">PDF</a>
-->
</div>
<div style="clear: both;"></div>

